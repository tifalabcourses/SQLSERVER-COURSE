----------------STRING ------------------UNICODE STRING ----------------
--CHAR                                  --nCHAR    
--TEXT                                  --nTEXT
--VARCHAR                               --nVARCHAR

------------------ CHAR  -----------------------------
DECLARE @test_CHAR_Var  CHAR ;
  SET @test_CHAR_Var  = 'C';
  SELECT  @test_CHAR_Var   AS VALUE ;
  SELECT   LEN(@test_CHAR_Var ) AS LENGHT
  SELECT   DATALENGTH(@test_CHAR_Var)	AS DATALENGHT

 ------------------ VARCHAR  -----------------------------
DECLARE @test_VARCHAR_Var VARCHAR(10) ;
  SET @test_VARCHAR_Var  = 'Mostafa';
  SELECT  @test_VARCHAR_Var   AS VALUE ;
  SELECT   LEN(@test_VARCHAR_Var ) AS LENGHT
  SELECT   DATALENGTH(@test_VARCHAR_Var)	AS DATALENGHT
   ------------------ TEXT  ---------not used with variable------------
DECLARE @test_TEXT_Var TEXT ;
  SET @test_TEXT_Var  = 'Mostafa';
  SELECT  @test_TEXT_Var   AS VALUE ;
  SELECT   LEN(@test_TEXT_Var ) AS LENGHT
  SELECT   DATALENGTH(@test_TEXT_Var)	AS DATALENGHT

------------------ NCHAR  -----------------------------
DECLARE @test_NCHAR_Var  NCHAR ;
  SET @test_NCHAR_Var  = 'C';
  SELECT  @test_NCHAR_Var   AS VALUE ;
  SELECT   LEN(@test_NCHAR_Var ) AS LENGHT
  SELECT   DATALENGTH(@test_NCHAR_Var)	AS DATALENGHT

 ------------------ NVARCHAR  -----------------------------
DECLARE @test_NVARCHAR_Var NVARCHAR(10) ;
  SET @test_NVARCHAR_Var  = 'Mostafa';
  SELECT  @test_NVARCHAR_Var   AS VALUE ;
  SELECT   LEN(@test_NVARCHAR_Var ) AS LENGHT
  SELECT   DATALENGTH(@test_NVARCHAR_Var)	AS DATALENGHT
  
   ------------------ NTEXT  ---------not used with variable------------
