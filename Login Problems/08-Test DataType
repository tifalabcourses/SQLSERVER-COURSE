 ----------------- BIT ------------------- 
  -- 0    1 
 DECLARE @test_BIT_Var           BIT ;

  SET @test_BIT_Var  = 012 ;
  SELECT  @test_BIT_Var   AS VALUE ;
  SELECT   LEN(@test_BIT_Var ) AS LENGHT

------------------ INT  -----------------------------
  -- -2,147,483,648         2,147,483,647
  
  DECLARE @test_INT_Var          INT ;

  SET @test_INT_Var  = 21474836471;
  SELECT  @test_INT_Var   AS VALUE ;
  SELECT   LEN(@test_INT_Var ) AS LENGHT

------------------ TINYINT  -----------------------------
--    0      255

DECLARE @test_TINYINT_Var      TINYINT ;

  SET @test_TINYINT_Var  = 256;
  SELECT  @test_TINYINT_Var   AS VALUE ;
  SELECT   LEN(@test_TINYINT_Var ) AS LENGHT

