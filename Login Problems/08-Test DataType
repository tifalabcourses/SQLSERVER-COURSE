from sys.dm_db_session_space_usage 
where session_id = @@SPID


 DECLARE @testVar  INT ;
 SET @testVar = 554 ;

 SELECT  @testVar  AS VALUE ;
 SELECT   LEN(@testVar) AS LENGHT